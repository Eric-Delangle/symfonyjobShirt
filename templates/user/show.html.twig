{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="center white top">Votre compte</h1>
    <br>
<div class="container font">
    <table class="table">
        <tbody class="white">
            <tr>
                <th>Votre prénom :</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Votre nom :</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Votre email :</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Numéro :</th>
                <td>{{ user.numero }}</td>
            </tr>
            <tr>
                <th>Rue :</th>
                <td>{{ user.rue }}</td>
            </tr>
            <tr>
                <th>Code postal :</th>
                <td>{{ user.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville :</th>
                <td>{{ user.ville }}</td>
            </tr>
            <tr>
                <th>Téléphone :</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Inscrit le :</th>
                <td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-success"><a href="{{ path('home') }}" class="list white">Retour a l'accueil</a></button>
<button class="btn btn-info"><a href="{{ path('basket_index') }}" class="list white">Panier</a></button>

    <button class="btn btn-primary"><a href="{{ path('user_edit', {'id': user.id}) }}" class="list white">Modifier vos informations</a></button>
</div>
<br>
{% endblock %}
